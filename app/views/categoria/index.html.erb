<h1>Lista Categorias</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categoria.each do |categorium| %>
  <tr>
    <td><%= categorium.nombre %></td>
    <td><%= categorium.descripcion %></td>
    <td><%= link_to 'Ver', categorium %></td>
    <td><%= link_to 'Editar', edit_categorium_path(categorium) %></td>
    <td><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Nueva Categoria', new_categorium_path %>
