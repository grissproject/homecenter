<h2>Registrarse</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div style="float: left; width: 350px;">
    <div><%= f.label "Usuario" %><br />
      <%= f.text_field :username, :autofocus => true %></div>

    <div><%= f.label "Nombre" %><br />
      <%= f.text_field :nombre %></div>

      <div><%= f.label "Apellido" %><br />
      <%= f.text_field :apellido %></div>

    <div><%= f.label :email %><br />
    <%= f.email_field :email%></div>

    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label "Confirmar Password" %><br />
    <%= f.password_field :password_confirmation %></div>
  </div>
  <div style="float: left; width: 300px">
    <div class="field">
      <%= f.label :avatar, "Imagen" %> <small>(Opcional)</small>:<br />
      <%= f.file_field :avatar %>
    </div>
  </div>

  <div style="clear: both;"></div>

  <div><%= f.submit "Registrarse" %></div>
<% end %>

<%= render "devise/shared/links" %>